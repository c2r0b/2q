{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "inlineSources": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "target": "esnext",
    "useDefineForClassFields": false,
    "resolveJsonModule": true,
    "paths": {
      "src": ["/src/"]
    },
    "lib": [
      "DOM.iterable",
      "DOM",
      "es2015.iterable",
      "es2020",
      "es5",
      "es6",
      "ScriptHost"
    ]
  }
}
